{
  "name": "exposr-server",
  "version": "0.6.0",
  "type": "module",
  "main": "exposr-server.cjs",
  "bin": "exposr-server.cjs",
  "author": "Fredrik Lindberg <fli@shapeshifter.se>",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "files": [
    "exposr-server.cjs",
    "README.md",
    "LICENSE",
    "yarn.lock",
    "build.env",
    "build.js",
    "Dockerfile",
    "Makefile"
  ],
  "dependencies": {
    "content-type": "^1.0.4",
    "koa": "^2.13.4",
    "koa-joi-router": "^8.0.0",
    "koa-router": "^10.0.0",
    "log4js": "^6.4.0",
    "node-cache": "^5.1.2",
    "port-numbers": "^6.0.1",
    "redis": "^3.1.2",
    "redlock": "^4.2.0",
    "ssh2": "^1.4.0",
    "sshpk": "^1.16.1",
    "ws": "^7.3.1",
    "yargs": "^17.1.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "mocha": "^9.2.1",
    "pkg": "^5.5.2",
    "rollup": "^2.69.2",
    "standard-version": "^9.3.2",
    "yaml": "^1.10.2"
  },
  "scripts": {
    "prepack": "yarn run version && yarn run bundle",
    "postpack": "rm build.env exposr-server.cjs",
    "release": "standard-version",
    "version": "scripts/build-version.sh",
    "bundle": "rollup exposr-server.js --file exposr-server.cjs --format cjs -p @rollup/plugin-commonjs -p @rollup/plugin-json",
    "dist-macos": "source build.env; pkg -d --public-packages 'node_modules/*' -o dist/exposr-server-${EXPOSR_BUILD_VERSION}-macos-x64 -t node16-macos-x64 exposr-server.cjs",
    "dist-linux": "source build.env; pkg -d --public-packages 'node_modules/*' -o dist/exposr-server-${EXPOSR_BUILD_VERSION}-linux -t node16-linuxstatic-arm64,node16-linuxstatic-armv7,node16-linuxstatic-x64 exposr-server.cjs",
    "test": "NODE_ENV=test mocha --exit --recursive test"
  }
}
